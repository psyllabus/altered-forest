@font-face {
    font-family: 'Neoterique';
    src: url('fonts/Neoterique.ttf');
}
@font-face {
    font-family: 'Neoterique Italic';
    src: url('fonts/Neoterique Italic.ttf');
}
@font-face {
    font-family: 'neo-latina-demo-ffp';
    src: url('fonts/neo-latina-demo-ffp.ttf');
}


html
    // width: 100%;
    // height: 100%;
    font: 14px "Neoterique", "Lucida Grande", Helvetica, Arial, sans-serif
    line-height: 1.3
    color: #ffffff
    margin: 0

body
    margin: 0

a
    color: #00B7FF

apply-background-image(bgOpacity)
    background-image: linear-gradient(rgba(0, 0, 0, bgOpacity), rgba(0, 0, 0, bgOpacity)),  url('../images/background.jpg')
    background-position: center center
    background-repeat: no-repeat
    background-attachment: fixed
    background-size: cover
    background-color: transparent

.header
    .mobile-navbar
        display: none

    .navbar
    .mobile-navbar
        position: fixed
        top: 0
        width: 100%
        // background-color: rgba(0, 0, 64, 0.5)
        z-index: 100
        font-size: 150%
        apply-background-image(0.6)

        a
            color: inherit
            text-decoration: none

        .right
            text-align: right
            display: inline-block
            position: fixed
            top: 0
            right: 0
            // font-size: 150%

        .nav-item
            display: inline-block
            position: relative

            > .content
                white-space: nowrap

            .content
                cursor: pointer
                position: relative
                z-index: 100
                apply-background-image(0.6)

                .highlight
                    display: block
                    padding: 15px 25px
                    transition: background-color 300ms ease-in-out

                    &:hover
                        background-color: rgba(255, 255, 255, 0.3)

        .dropdown
            position: absolute
            transform: translateY(-125%)
            transition: transform 300ms cubic-bezier(0.23, 1, 0.32, 1);
            box-shadow: 2px 2px 10px black
            z-index: 50
            apply-background-image(1.0)

        .nav-item:hover
            .dropdown
                transform: translateY(0)

            > .content > .highlight
                background-color: rgba(255, 255, 255, 0.3)


.container
    background-size: cover;
    // height: calc(100vh - 74px - 47px)
    margin-top: CONTENT_MARGIN_TOP
    // overflow-y: auto;

.background
    width: 100%
    height: 100%
    position: fixed
    z-index: -100
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    apply-background-image(0.4)

.main-content
    width: 1200px
    margin: auto

.footer
    text-align: center
    padding: 20px 0
    background-color: rgba(0, 0, 64, 0.5)
    width: 100%

    .social
        a
            color: white
        span
            padding: 0 10px
            margin: 0 5px
            font-size: 25px

.scroll-hint
    font-size: 50px
    position: fixed
    bottom: 75px
    right: 75px
    height: 0
    opacity: 1
    text-align: right
    transition: opacity 0.5s linear

    span
        opacity: 0
        animation-name: fading-light
        animation-delay: 2s
        animation-duration: 5s
        animation-direction: alternate
        animation-iteration-count: infinite

.scroll-hint.scrolled
    opacity: 0 !important

.construction
    height: 'calc(100vh - %s - %s)' % (CONTENT_MARGIN_TOP  FOOTER_HEIGHT)

@media TABLET_LANDSCAPE
    .main-content
        max-width: calc(100% - 100px)
    .header
        .navbar
            font-size: 130% !important

@media TABLET_PORTRAIT
    .main-content
        max-width: calc(100% - 50px)
    .header
        .navbar
            font-size: 110% !important
            .highlight
                padding-right: 15px !important
                padding-left: 15px !important

@media PHONE_LANDSCAPE
    .header
        .navbar
            font-size: 100% !important
            .highlight
                padding-right: 10px !important
                padding-left: 10px !important

@media PHONE_PORTRAIT
    .main-content
        max-width: calc(100% - 50px)
    .header
        .navbar
            display: none
    .mobile-navbar
        display: block !important
        font-size: 100% !important
