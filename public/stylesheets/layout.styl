@font-face {
    font-family: 'Neoterique';
    src: url('fonts/Neoterique.ttf');
}
@font-face {
    font-family: 'Neoterique Italic';
    src: url('fonts/Neoterique Italic.ttf');
}
@font-face {
    font-family: 'neo-latina-demo-ffp';
    src: url('fonts/neo-latina-demo-ffp.ttf');
}
@font-face {
    font-family: 'New Academy';
    src: url('fonts/NEWACADEMY.ttf');
}


html
    // width: 100%;
    // height: 100%;
    font: 14px "Neoterique", "Lucida Grande", Helvetica, Arial, sans-serif
    letter-spacing: 1px;
    line-height: 1.3
    color: #ffffff
    margin: 0

body
    margin: 0

a
    color: #00B7FF

h1
    font-size: 300%
p
    font: 14px "New Academy", Verdana, Geneva, sans-serif
    letter-spacing: -1px;
    line-height: 1.2
.font-titles
    font-family:  "Neoterique", "Lucida Grande", Helvetica, Arial, sans-serif

.font-text
    font-family: "New Academy", Verdana, Geneva, sans-serif
    letter-spacing: -1px;

apply-background-image(bgOpacity)
    background-image: linear-gradient(rgba(0, 0, 0, bgOpacity), rgba(0, 0, 0, bgOpacity)),  url('../images/background.jpg')
    background-position: center center
    background-repeat: no-repeat
    background-attachment: fixed
    background-size: cover
    background-color: transparent

.header
    .navbar
    .mobile-navbar
        position: fixed
        top: 0
        display: flex;
        width: 100%
        z-index 1

        font-size: 150%
        apply-background-image(0.6)

        a
            color: inherit
            text-decoration: none

        .spacer
            flex: 1
            apply-background-image(0.6)
            z-index: 100;

        .nav-item
            position: relative

            > .content
                white-space: nowrap
                apply-background-image(0.6)

            .content
                cursor: pointer
                position: relative
                z-index: 100

                .highlight
                    display: block
                    padding: 15px 25px
                    transition: background-color 200ms ease-out

                    &:hover
                        background-color: rgba(255, 255, 255, 0.3)


        .dropdown
            position: absolute
            transform: translateY(-125%)
            transition: transform 500ms cubic-bezier(0.23, 1, 0.32, 1);
            box-shadow: 2px 2px 10px black
            apply-background-image(0.8)

        .nav-item:hover
        .nav-item:active
            .dropdown
                transform: translateY(0)

            > .content > .highlight
                background-color: rgba(255, 255, 255, 0.3)
    .navbar
        // the border is partially transparent for some reason and let the dropdown leak behind it
        // > .nav-item
        //     border-right: 1px solid black
        .dropdown > .content:not(:last-child)
            border-bottom: 1px solid black

    .mobile-navbar
        display: none
        .dropdown
            position: fixed
            left: 0

            .nav-item
                display: block
                width: 100vw
                text-align: center

            .nav-item:not(:last-child)
                border-bottom: 1px solid black

.container
    background-size: cover;
    margin-top: CONTENT_MARGIN_TOP
    overflow-x: hidden

.background
    width: 100%
    height: 100%
    position: fixed
    z-index: -100
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    apply-background-image(0.4)

.main-content
    width: 1200px
    margin: auto

.footer
    text-align: center
    apply-background-image(0.8)
    width: 100%
    height: FOOTER_HEIGHT
    overflow: hidden
    display: flex;
    flex-direction: column;
    justify-content: center;

    .social
        a
            color: white
        span
            padding: 0 10px
            margin: 0 5px
            font-size: 25px

fadingLight()
    animation-name: fading-light
    animation-delay: 2s
    animation-duration: 5s
    animation-direction: alternate
    animation-iteration-count: infinite

fadingLightOn()
    animation-name: fading-light-on
    animation-duration: 5s
    animation-direction: alternate
    animation-iteration-count: infinite

.scroll-hint
    font-size: 50px
    position: fixed
    bottom: 75px
    right: 75px
    height: 0
    opacity: 1
    text-align: right
    transition: opacity 0.5s linear

    span
        opacity: 0
        fadingLight()

.scroll-hint.scrolled
    opacity: 0 !important

.construction
    height: 'calc(100vh - %s - %s)' % (CONTENT_MARGIN_TOP  FOOTER_HEIGHT)

.hidden
    display: none

.center
    text-align: center

.vertical-center
    position: relative

    > div
        position: absolute
        top: 50%
        transform: translateY(-50%)

@media TABLET_LANDSCAPE
    .main-content
        max-width: calc(100% - 200px)
    .header
        .navbar
            font-size: 130% !important


@media TABLET_PORTRAIT
    .main-content
        max-width: calc(100% - 100px)
    .header
        .navbar
            font-size: 110% !important
            .highlight
                padding-right: 15px !important
                padding-left: 15px !important



@media PHONE_LANDSCAPE
    .header
        .navbar
            font-size: 100% !important
            .highlight
                padding-right: 10px !important
                padding-left: 10px !important

@media PHONE_PORTRAIT
    .main-content
        max-width: calc(100% - 50px)

    .header
        .navbar
            display: none !important

    .mobile-navbar
        display: flex !important
        font-size: 100% !important

    .container
        margin-top: CONTENT_MARGIN_TOP_MOBILE


@keyframes fading-light
    100%
        opacity: 0.6
    0%
        opacity: 0

@keyframes fading-light-on
    100%
        opacity: 1.0
    0%
        opacity: 0.4
