.framed-text
    text-align: left
    // height: 300px
    // overflow-y: auto

    img
        display: block
        float: left
        -webkit-shape-outside: polygon(50% 0%, 50% 0%, 100% 100%, 0% 100%)
        shape-outside: polygon(50% 0%, 50% 0%, 100% 100%, 0% 100%)
        height: 300px;
        margin-right: 50px;

    .text-container
        // seems impossible to align vertically without screwing up the triangle shape :(
        // text-align: justify
        margin-left: 175px
        padding-top: 20px;

        .text-content
            padding: 0 10px;
            border: 5px solid black
            border-radius: 2px
            background-color: rgba(0, 0, 64, 0.8)
            box-shadow: 5px 5px 20px black

        p
            font: 14px Verdana, Geneva, sans-serif
            line-height: 1.5

// hack to retain ability to scroll until all content is past the foooter
// because that damn framed-text div isn't expanding to the size of the content the way it should... -_-''
.framed-text:last-child
    .text-container
        .text-content
            margin-bottom: 'calc(%s + 20px)' % FOOTER_HEIGHT

@media PHONE_LANDSCAPE
    .framed-text
        img
            height: 200px
            margin-right: 20px

        .text-container
            margin-left: 120px


@media PHONE_PORTRAIT
    // .framed-text,
    .framed-text
        img
            margin-left: -20px
            height: auto
            width: calc(100vw - 10px)
            margin-bottom: 20px
            shape-outside: none;

        .text-container
            margin-left: 0
