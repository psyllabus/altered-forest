doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")


  body
    .header
      nav.navbar
        .logo.nav-item
          .content
            a.highlight(href="/") AF
        .right
          .nav-item.performers
            .content
              a.highlight(href='/performers') Performers
            .dropdown
              .content
                a.highlight(href="/performers/audio") Audio Performers
              .content
                a.highlight(href="/performers/visual") Visual Performers
              .content
                a.highlight(href="/performers/tribe") The Tribe
          .nav-item.news
            .content
              a.highlight(href="/news") News
          .nav-item.location
            .content
              a.highlight(href="/location") Location
          .nav-item.gallery
            .content
              a.highlight(href="/gallery") Gallery
          .nav-item.infos
            .content
              a.highlight(href="/info") More info
            .dropdown
              .content
                a.highlight(href="/info/tips") Tips
              .content
                a.highlight(href="/info/camping") Camping Rules
              .content
                a.highlight(href="/info/contact") Contact
              .content
                a.highlight(href="/info/applications") Applications
          .nav-item.tickets
            .content
              a.highlight(href="/tickets") Tickets
      nav.mobile-navbar
        .logo.nav-item
          .content
            a.highlight(href="/") AF
        .right
          .nav-item
            .content
              .highlight
                span.fas.fa-bars

    .background
    .container
      .main-content
        block content

    .footer
      .social
        a(target="_blank" href="https://www.facebook.com/alteredforest")
          span.fab.fa-facebook
        a(target="_blank" href="https://twitter.com/alteredforest")
          span.fab.fa-twitter
        a(target="_blank" href="https://www.instagram.com/alteredforest/")
          span.fab.fa-instagram
        a(target="_blank" href="https://www.mixcloud.com/AlteredForest/")
          span.fab.fa-mixcloud
        a(target="_blank" href="https://soundcloud.com/alteredforest")
          span.fab.fa-soundcloud

    .scroll-hint
        span.fas.fa-angle-down
  script(type="application/javascript" src="javascripts/jquery-3.3.1.slim.min.js")
  script(type="application/javascript" src="javascripts/custom/layout.js")
  block scripts