mixin navItem(className, link, text)
    .nav-item
        .content
            a.highlight(href=link)
                if text
                    = text
                else if block
                    block
                else
                    = 'Placeholder'

mixin dropdownNavItem(className, link, text, dropdown)
    .nav-item
        .content
            a.highlight(href=link)= text
        .dropdown
            each item in dropdown
                .content
                    a.highlight(href=item.link)= item.text

mixin framedContent(image, side)
    .framed-text(class!=attributes.class + (side && side === 'right' ? ' right' : ' left'))
        img(src=image alt="image")
        .text-container
            .text-content
                block
