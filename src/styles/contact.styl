
    .contact
        .center > h3
        .center > p
            text-align: left !important

        .field

            > label
                display block
                width 100%
                padding-left 15px
                margin 15px
                margin-tip 50px

            > input
                width 100%
                padding 10px
                box-sizing:border-box
                background-color INPUT_FIELD_COLOR
                border-color INPUT_FIELD_BORDER_COLOR
                color white
                
                &.error
                    border-color: red;

            > textarea
                height 50vh
                width: 100%
                background-color INPUT_FIELD_COLOR
                border-color INPUT_FIELD_BORDER_COLOR
                color white

                &.error + div
                    border: 1px solid red;

        .ck-editor .ck-content
            min-height 50vh
            color black
            background-color INPUT_FIELD_COLOR !important
            border-color INPUT_FIELD_BORDER_COLOR !important
            color white
            p, h1, h2, h3, h4, h5
                font-family: Arial !important;
            p
                font-size: 130%

        .submit-container
            margin-top: 25px;
            text-align: right;

        .submit
            background #1000F6
            background-image -webkit-linear-gradient(top, #1000F6, #000A8F)
            background-image -moz-linear-gradient(top, #1000F6, #000A8F)
            background-image -ms-linear-gradient(top, #1000F6, #000A8F)
            background-image -o-linear-gradient(top, #1000F6, #000A8F)
            background-image linear-gradient(to bottom, #1000F6, #000A8F)
            -webkit-border-radius 2px
            -moz-border-radius 2px
            border-radius 2px
            color #FFFFFF
            font-family Open Sans
            padding 10px
            box-shadow 1px 1px 20px 0px #000000
            -webkit-box-shadow 1px 1px 20px 0px #000000
            -moz-box-shadow 1px 1px 20px 0px #000000
            text-shadow 1px 1px 20px #000000
            border solid #06005E 1px
            text-decoration none
            display inline-block
            cursor pointer

            &:hover
                background #000A8F
                background-image -webkit-linear-gradient(top, #000A8F, #1000F6)
                background-image -moz-linear-gradient(top, #000A8F, #1000F6)
                background-image -ms-linear-gradient(top, #000A8F, #1000F6)
                background-image -o-linear-gradient(top, #000A8F, #1000F6)
                background-image linear-gradient(to bottom, #000A8F, #1000F6)
                text-decoration none
