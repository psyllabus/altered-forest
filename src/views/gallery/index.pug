extends ../layout


block styles
    style(type='text/css').
        /* Assumes the page won't ever grow past the height of the screen */
        .container {
            margin-bottom: 60px
        }
        .footer {
            position: fixed;
            bottom: 0;
        }

block content
    .gallery
        .intro-container.vertical-center
            .center
                h1.with-shadows
                    +translate('gallery.title')

        +linkedPage('/images/albums/af2018.jpg', '/gallery/af2018')
            h3= translate('gallery.albums.af2018.title')


block scripts
    script(type="application/javascript" src="/javascripts/custom/sliding-frames.js")
